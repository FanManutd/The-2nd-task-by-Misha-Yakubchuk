doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")

    title Cards
  body
    .logo
      .logo__wrapper
        +logo()
    .cards
      .cards__content
        .cards__column
          .cards__search-room-card
            +search-room-card()
          .cards__sign-up-card
            +sign-up-card()
        .cards__column
          .cards__booking-room-card
            +booking-room-card({number: "888", costForDay: "9 990", isLux: true})
          .cards__sign-in-card
            +sign-in-card()
        .cards__column
          .cards__calendar
            .datepicker-here
          .cards__room-card
            +room-card({image: "room1.jpg", number: "888", isLux: true, costForDay: "9 990", activeStars: 5, numOfComments: "145"})
          .cards__room-card
            +room-card({image: "room2.jpg", number: "840", costForDay: "9 990", activeStars: 4, numOfComments: "65"})

